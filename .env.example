# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database (Render.com will automatically provide DATABASE_URL in production)
DATABASE_URL=sqlite:///tour.db

# API Keys (Required for AI features)
GEMINI_API_KEY=your-gemini-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Optional: Google Maps (if you want to use it)
PUBLIC_GOOGLE_MAPS_KEY=your-google-maps-key-here

# Email Configuration (Optional - for password reset emails)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Security Settings (Render.com will set these automatically)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Internationalization
BABEL_DEFAULT_LOCALE=en
BABEL_SUPPORTED_LOCALES=en,hi,kn

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATELIMIT_DEFAULT=200 per day;50 per hour

# Upload Settings
MAX_CONTENT_LENGTH=16777216

# Password Reset
PASSWORD_RESET_EXPIRATION=3600
